<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".revOHS">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabOhs"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="#1db995"
        app:layout_constraintBottom_toTopOf="@+id/thsVP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemohs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemohs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats and Effect" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemohs3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equip Guide" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItemohs4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good and Bad" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ohsVP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabOhs" />


</androidx.constraintlayout.widget.ConstraintLayout>