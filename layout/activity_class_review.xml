<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".classReview">

    <ScrollView
        android:id="@+id/sclClass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnOHS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="One Handed Sword"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTHS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="Two Handed Sword"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBOW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="Bow"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBWG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="bowgun"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSTF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="staff"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="magic device"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="halberd"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnKTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="katana"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnKN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="knuckle"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="dual sword"
                android:textColor="#FF37FF00"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>