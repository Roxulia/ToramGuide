<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".mainSkills">

    <ScrollView
        android:id="@+id/sclMsk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="100dp"
        android:background="#86000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBladeSKill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Blade Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnShotSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Shot Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMagicSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Magic Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMartialSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Martial Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnHBSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Halberd Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMomonofuSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Mononofu Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDualSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002196F3"
                android:text="Dual Sword Skills"
                android:textColor="#FF37FF00"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewMsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>